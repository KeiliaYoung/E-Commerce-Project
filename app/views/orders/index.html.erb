<div class="row">
  <% @orders.each do |order| %>
    <div class="col-md">
      <h1>
        Order # <%= order.id %>:
        <%= link_to @order.product.name, order.id %>
      </h1>
      <%= order.product.description %>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
