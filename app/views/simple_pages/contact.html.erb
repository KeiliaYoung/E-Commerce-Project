<h2>Contact Me</h2><br><br>
  <div class="container-fluid" id="contactme">
    <div class="form-group1">
      <p> For more Information, please contact me at: <br>
        <span class="glyphicon glyphicon-phone">Phone: 555-555-5555 </span> <br>
        <span class="glyphicon glyphicon-envelope">Email: myemail@gmail.com </span><br>
        <strong>Social Media</strong>:<br>
        <a href="https://www.instagram.com/" target="_blank"><span class="glyphicon glyphicon-search"></span> My Instagram </a> <br>
        <a href="https://www.linkedin.com/" target="_blank"><span class="glyphicon glyphicon-search"></span> My LinkedIn </a> <br>
      </p>
    </div> <!-- END FORM-GROUP1-->

    <%= form_with(url: "/simple_pages/landing_page", method: "post", local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter name", required: "true" %>
      </div>

      <div class="form-group">
        <%= form.label :email %><br>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter email", required: "true" %>
      </div>

      <div class="form-group">
        <%= form.label :message %><br>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter message", rows: "5", required: "true" %>
      </div>

      <div>
        <%= form.submit "Submit", class: "btn btn-success", id: "submit-btn" %>
      </div>

    <% end %>
  </div> <!--end container-fluid div-->
