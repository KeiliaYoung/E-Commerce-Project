<h2>Contact Me</h2><br><br>
  <div class="container-fluid" id="contactme">

    <%= flash[:notice] %>
	<div class="row">
		<div class="col-md-3", id="contact-col-md">
			<div class="contact-info">
				<h2>Reach Out</h2>
				<h4>We would love to hear from you!</h4>
			</div><!--end contact-info div-->
		</div><!--end col-md-3 div-->

		<div class="col-md-9">
			<div class="contact-form">
        <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>

				<div class="form-group">
				  <div class="col-sm-7">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
				  </div> <!--end col-sm-10 div-->
				</div><!--end form-group div-->

				<div class="form-group">
				  <div class="col-sm-7">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
				  </div><!--end col-sm-10 div-->
				</div><!--end form-group div-->

				<div class="form-group">
				  <div class="col-sm-7">
            <%= form.label :message %>
            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
				  </div><!--end col-sm-10 div-->
				</div><!--end form-group div-->

				<div class="form-group">
				  <div class="col-sm-offset-2 col-sm-7">
            <%= form.submit "Send", class: "btn btn-info" %>
            <% end %>
				  </div><!--end col-sm-offset-2 div-->
				</div><!--end form-group div-->
			</div><!--end contact-form div-->
		</div><!--end col-md-9 div-->
	</div> <!--end row div-->
</div> <!--end container-fluid div-->
