<div class="row2", id="review-cmts"><hr>
  <div class="rated" data-score="<%= comment.rating %>"></div><vr>
    <p>
      <%= comment.user.first_name %>  <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> 
      <%= comment.body %>
      <% if signed_in? && current_user.admin? %>
      <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, product_comment_path(comment.product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
</div>
