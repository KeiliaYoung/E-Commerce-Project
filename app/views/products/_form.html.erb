<%= form_with(model: product, local: true) do |form| %> <!-- generates form tags -->
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><!-- generates label tags -->
    <%= form.text_field :name %> <!-- generates input tags -->
  </div>

  <div class="field">
    <%= form.label :description %> <!-- generates label tags -->
    <%= form.text_area :description %><!-- generates input tags -->
  </div>

  <div class="field">
    <%= form.label :image_url %><!-- generates label tags -->
    <%= form.text_field :image_url %><!-- generates input tags -->
  </div>

  <div class="field">
    <%= form.label :color %><br><!-- generates label tags -->
    <%= form.text_field :color %><!-- generates input tags -->
  </div>

  <div class="field">
    <%= form.label :price %><br><!-- generates label tags -->
    <%= form.text_field :price %><!-- generates input tags -->
  </div>

  <div class="actions">
    <%= form.submit %> <!-- generates submit button tags -->
  </div>
<% end %>
