<div class="col-sm-12 col-md-6 col-lg">
  <%= link_to product do %>
    <h4>
      <%= product.name %><br><br>
      <% if product.image_url %>
        <%= image_tag(product.image_url, class: "img-fluid") %>
      <% end %>
    </h4>
  <% end %>
  <p>
    <%= product.description %>
  </p>

  <strong>
    <%= product.price %>
  </strong>

<div class="product-btn">
  <%= link_to 'Show', product, class:'btn btn-primary' %>

  <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info' %>

  <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>

</div>

</div><!-- /col -->
