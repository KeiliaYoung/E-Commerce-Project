<div class="col-lg col-md-4 col-xs-12">

  <% cache product do %>

    <%= link_to product do %>
        <h4><%= product.name %></h4>
            <%= image_tag(product.image_url, class: "img-fluid") %>
      <% end %><br>
        <%= product.description %><br>
        <%= product.price %>

      <div class="product-btn">
          <%= link_to 'Show', product, class:'btn btn-primary' %>

          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info', id: 'edit-btn' %>

          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>

        </div>

    <% end %> <!--cache end-->


</div><!-- /col -->
