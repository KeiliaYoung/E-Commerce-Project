<div class="col-lg col-md-4 col-xs-12">
    <% cache product do %>

      <%= link_to product do %><br>
        <h4><%= product.name %></h4>
            <%= image_tag(product.image_url, class: "img-fluid") %>
      <% end %><br>
        <p>
          <%= product.description %><br>
          Price:
          <%= product.price %>
        </p>

        <div class="product-btn">
            <%= link_to 'Show', product, class:'btn btn-outline-success' %>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-outline-info', id: 'edit-btn' %>
            <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-warning' %>
        </div>

    <% end %> <!--cache end-->


</div><!-- /col -->
